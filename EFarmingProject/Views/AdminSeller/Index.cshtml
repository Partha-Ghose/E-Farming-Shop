@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SProductTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SProductDescription)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.SProductImage)*@
