        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.SProductId }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.SProductId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SProductId }) |
            @Html.ActionLink("Activate", "Acitivate", new { id = item.SProductId })
        </td>
