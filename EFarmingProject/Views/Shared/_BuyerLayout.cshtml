<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body style="background-image: url('../Images/others/background.jpg');">

    <div class="container" style="background-color:#FCA; border-radius:20px; margin-bottom:auto; margin-top:10px;">
        <div class="row">
            <div class="col-md-12">

                <img style="border-radius:20px; border:1px solid #020; background:#ddd; padding:2px; margin-top:15px; margin-bottom:15px;" src="~/Images/slide/crops.jpg" height="280px;" width="100%" />
                <div class="carousel-caption d-none d-md-block">
                    <h1 style="color:#5EF">Online E-Farming System</h1>
                    @*<button class="btn btn-info btn-lg">Shop Now</button>*@
                    <a href="mailto:ppghose0@gmail.com" class="btn btn-primary" style="border-radius:70px;"><i class="fas fa-mail-bulk "> </i>&nbsp;Mail Me</a>

                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="nav-menus">

                    <ul class="nav nav-pills">
                        @*<li><a style="border-radius:initial;" href="#">Home</a></li>*@
                        <li>@Html.ActionLink("Home", "Index", "BuyerProduct")</li>
                        @*<li>@Html.ActionLink("Buyer Products", "Index", "BuyerProduct")</li>*@
                        <li>@Html.ActionLink("Add Product", "Create", "SellerProduct")</li>
                        <li>@Html.ActionLink("Profile", "BuyerProfile", "BuyerView")</li>
                        <li>@Html.ActionLink("Support", "Create", "Support")</li>
                        @*SellerProduct/Create*@
                        <li>
                            <a style="border-radius:initial; float:right;" href="#">Welcome - @HttpContext.Current.User.Identity.Name</a>
                        </li>

                        <li style="border-radius:initial; float:right; background-color: #000; padding: 9px 16px; border-radius: 4px;">
                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("BuyerLogout", "Buyer", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                <li style="float:right;">
                                    <a style="color:#fff;" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                                </li>
                            }
                        }
                            </li>

                        </ul>
                    </div>
                </div>

            </div>


            @RenderBody()
            <hr />

            <footer>
                <div class="row">
                    <div class="col-md-12 copyright">

                        <div class="col-md-6 col-sm-6 copyright-left">
                            <p>&copy; @DateTime.Now.Year - EFarming. All right reserved.</p>
                        </div>

                        <div class="col-md-6 col-sm-6 copyright-right">

                            <ul class="list-unstyled list-social">
                                <li><a href="#" target="_blank"><i class="fab fa-facebook-square"></i></a></li>
                                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fab fa-google-plus"></i></a></li>

                            </ul>
                        </div>
                    </div>
                </div>

            </footer>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
        @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")*@
        @RenderSection("scripts", required: false)
    </body>
    </html>
